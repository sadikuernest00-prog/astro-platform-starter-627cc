---
const navItems = [
  { text: 'Home', href: '/' },
  { text: 'About us', href: '/about' },
  { text: 'Image CDN', href: '/image-cdn' },
  { text: 'Membership', href: '/membership' },
  { text: 'Investments', href: '/investments' },
  { text: 'Contact', href: '/contact-info' },
];
---

<header class="py-6">
  <div class="flex items-center justify-between">
    <a href="/" class="text-2xl font-semibold">AmicBridge.com</a>
    <nav>
      <ul class="flex gap-6">
        {navItems.map((item) => (
          <li><a href={item.href} class="hover:underline">{item.text}</a></li>
        ))}
      </ul>
    </nav>
  </div>
</header>

---
import Logo from '../components/Logo.astro';

const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'About Us', href: '/about' },
  { linkText: 'Membership', href: '/membership' },
  { linkText: 'Investments', href: '/investments' },
  { linkText: 'Contact Info', href: '/contact-info' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
  <a href="/">
    <Logo />
  </a>

  <ul class="flex flex-wrap gap-6 text-lg font-medium ml-auto">
    {navItems.map(item => (
      <li>
        <a href={item.href} class="hover:underline">
          {item.linkText}
        </a>
      </li>
    ))}
  </ul>
</nav>

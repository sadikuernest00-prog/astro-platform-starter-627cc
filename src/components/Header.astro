---
import { Astro } from 'astro';

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Lend', href: '/lend' },
  { name: 'Borrow', href: '/borrow' },
  { name: 'Apply', href: '/apply' },
];
---

<header class="bg-gray-900 text-white py-5 shadow-lg">
  <div class="max-w-6xl mx-auto flex justify-between items-center px-6">
    <a href="/" class="text-2xl font-bold tracking-tight text-blue-400 hover:text-blue-300 transition">
      AmicBridge
    </a>
    <nav>
      <ul class="flex gap-8">
        {navLinks.map(link => (
          <li>
            <a href={link.href} class="hover:text-blue-400 transition">{link.name}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

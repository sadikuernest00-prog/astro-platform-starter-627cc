---
import '../styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
}
const { title = 'AmicBridge' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="antialiased min-h-screen bg-gradient-to-b from-slate-800 to-slate-900 text-white">
    <div class="max-w-5xl mx-auto px-6">
      <Header />
      <main class="py-10">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

    </p>
  </section>
</main>

<style>
  .about {
    font-family: system-ui, sans-serif;
    color: #111;
    line-height: 1.6;
  }

  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    background: linear-gradient(90deg, #0b132b, #1c2541);
    color: #fff;
    padding: 4rem 2rem;
  }

  .hero-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .brand {
    color: #00b4d8;
  }

  .hero-content p {
    font-size: 1.1rem;
    max-width: 500px;
  }

  .hero-img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
  }

  .mission,
  .values,
  .vision {
    padding: 3rem 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .mission h2,
  .values h2,
  .vision h2 {
    color: #0b132b;
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .mission p,
  .vision p {
    text-align: center;
    font-size: 1.1rem;
    color: #333;
  }

  .value-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .value-card {
    background: #f9fafb;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.1);
  }

  .icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-img {
      margin-top: 2rem;
    }
  }
</style>
